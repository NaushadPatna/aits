<div class="container-fluid mt-5 contact-style" id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact Us</h1>
            <p class="text-center sub-heading">We will be happy to help you</p>
            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contact" method="POST">
                        <div class="form-group">
                            <label for="inputname">Name</label>
                            <input type="text" id="inputname" placeholder="Full Name" name="name"
                                class="form-control text-uppercase">
                        </div>
                        <div class="form-group">
                            <label for="inputemail">Email Address</label>
                            <input type="email" id="inputemail" placeholder="Enter your Email" name="email"
                                aria-describedby="emailHelp" class="form-control text-lowercase">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="inputphone">Phone</label>
                            <input type="text" maxlength="10" minlength="10" id="inputphone" placeholder="Phone Number"
                                name="phone" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="inputmessage">Phone</label>
                            <input type="text" id="inputmessage" placeholder="Message" name="message"
                                class="form-control">
                        </div>
                        <button type="submit" class="btn-style btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>